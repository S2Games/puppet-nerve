{
  "port": <%= @port -%>,
  "host": "<%= @host -%>",
<% if @service_type.downcase == 'zookeeper' -%>
  "zk_hosts": <%= @service_hosts -%>,
  "zk_path": "<%= @service_path -%>",
<% elsif @service_type.downcase == 'etcd' -%>
  "etcd_hosts": <%= @service_hosts -%>,
  "etcd_path": "<%= @service_path -%>",
<% end -%>
  "check_interval": <%= @check_interval -%>,
  "checks": <%= require "json"; JSON.generate @checks %>
}
